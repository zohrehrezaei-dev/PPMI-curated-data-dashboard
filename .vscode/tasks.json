{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start PPMI Dashboard",
			"type": "shell",
			"command": "py",
			"args": ["-3.11", "-m", "streamlit", "run", "src/ppmi_dashboard.py"],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Stop PPMI Dashboard",
			"type": "shell",
			"command": "Stop-Process",
			"args": ["-Name", "python", "-Force", "-ErrorAction", "SilentlyContinue"],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "Restart PPMI Dashboard",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Stop PPMI Dashboard",
				"Start PPMI Dashboard"
			],
			"group": "build"
		}
	]
}